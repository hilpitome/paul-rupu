
<h1>Login</h1>

<%= form_tag user_sessions_path do %>
  <div class="form-group">
    <%= label_tag :email %>
    <%= text_field_tag :email %>
    <br/>
  </div>
  <div class="field">
    <%= label_tag :password %>
    <%= password_field_tag :password %>
    <br/>
  </div>
  <div class="actions">
    <%= link_to "Login", user_sessions_path %>
  </div>
<% end %>

