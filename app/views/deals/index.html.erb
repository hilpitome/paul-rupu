<p id="notice"><%= notice %></p>

<% @deals.each_slice(3) do |row| -%>
<div class="row">

  <% row.each do |deal| %>
         <div class="card col-md-4"> 
           <div class="card-block">

              <%= image_tag deal.image.url%>

           </div>
           <hr>
           <div class="card-block">


             <p><a href="#"><span style="color:black"><%= deal.description %></span></p>
               <br>
               <p class="card-text"><small><span style="color:grey"><%= "by #{deal.company}" %></span></small></p>
               <p><span style="color:grey; text-decoration: line-through"><%=deal.old_price%></span>  <span style="color:green;font-weight:bold"><%= deal.price%></span>  .<span style="color:red;font-weight:bold"><%="save #{deal.old_price - deal.price}/-"%></span></p>



                 <%= button_to 'BUY NOW!', line_items_path(deal_id: deal),  :class =>"button-buy" %>
                 <%= link_to 'Edit', edit_deal_path(deal) %>


           </div>
        </div>


<%end%>

</div>
<%end%>
